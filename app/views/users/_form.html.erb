
<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
  <% end %>
<% end %>

<%= form_for @user, url: users_path do |f| %>
  <div>
    <%= f.label :user_name %>
    <%= f.text_field :user_name %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <% if @user.persisted? %>
    <p>Enter current password below to verify authenticity</p>
    <div>
      <%= f.label :current_password %>
      <%= f.password_field :current_password %>
    </div>
  <% end %>
  <% if @user.persisted? %>
    <p>Enter new password and confirm it in order to change</p>
  <% end %>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <%= f.submit %>
<% end %>
